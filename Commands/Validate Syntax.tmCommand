<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>nop</string>
	<key>command</key>
	<string>#!/usr/bin/env zsh

original=$(cat /dev/stdin)
message=$(printf '%s\n' $original | ${TM_PHP:-php} -l 2&gt; /dev/null)
if [[ $? -eq 0 ]]; then
	exit
fi

# echo $message
# Attempt to fix unexpected error by inserting symbol to previous line.
unexpected_ptrn="unexpected( token)? ['\"]([^\"']+)['\"].* on line ([0-9]+)"
if [[ $message =~ $unexpected_ptrn ]] &amp;&amp; line=$(( $match[3] - 1)); then
	declare -a symbols
	# If expected symbol is known add it to list first.
	if [[ $message =~ "expecting ['\"]([^\"']+)['\"]( or ['\"]([^\"']+)['\"])?" ]]; then
		symbols+=($match[1] $match[3])
	fi
	# Rest of symbols to try.
	symbols+=("," ";")

	for symbol in $symbols; do
		modified="$(printf '%s' $original | sed -e "${line}s/$/${symbol}/")"
		printf '%s\n' $modified | ${TM_PHP:-php} -l &gt;/dev/null 2&gt;&amp;1
		if [[ $? -eq 0 ]]; then
			printf '%s\n' $modified
			# Code 202 stands for to replace document with stdout.
			# Helper exit_replace_document has an escaping bug with echo.
			exit 202
		fi
	done
fi

# Unable to fix by inserting expected character to end of the previous line.
# Tidy up message by removing some extra noise.
message=${message/ in Standard input code/}
message=${message/Parse error: syntax error, /}

# Move cursor to end of the previous line of error.
if [[ $message =~ 'on line ([0-9]+)' ]] &amp;&amp; line=$(( $match[1] - 1)); then
	# If cursor is already on the same line avoid moving cursor to the end.
	if [[ $line != $TM_LINE_NUMBER ]]; then
		open "txmt://open?line=${line}&amp;column=9999"
	fi
fi

# TODO Use html output
$TM_BUNDLE_SUPPORT/bin/tooltip "Syntax error, $(echo $message | head -n 2 | tail -n 1)"
</string>
